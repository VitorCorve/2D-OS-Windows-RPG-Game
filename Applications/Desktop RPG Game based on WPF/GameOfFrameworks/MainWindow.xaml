<Window x:Class="GameOfFrameworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfFrameworks"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1400" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden">
        </Frame>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBlock Text="ver. 1.0.0.3" Foreground="White" Margin="10"/>
            <Button Width="40" Height="20" Content="Close" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>