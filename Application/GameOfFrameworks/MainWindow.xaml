<Window x:Class="GameOfFrameworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfFrameworks"
        xmlns:vm="clr-namespace:GameOfFrameworks.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="{Binding VerticalWindowResolution, Mode=TwoWay}" 
        Width="{Binding HorizontalWindowResolution, Mode=TwoWay}" 
        WindowStartupLocation="CenterOwner" 
        WindowStyle="{Binding WindowStyle}" 
        ResizeMode="NoResize" 
        WindowState="{Binding WindowState}">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden">
        </Frame>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal">
            <TextBlock Text="{Binding Version, StringFormat={} Ver. {0}}" Foreground="White" Margin="10"/>
            <Button Width="40" Height="20" Content="Close" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>